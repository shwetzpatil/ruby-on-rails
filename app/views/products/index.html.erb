<div class="container-fluid body-content-wrapper">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-2 col-lg-4 product-display">
          <a><h3><%= product.name%></h3></a>
          <p><%= image_tag(product.image_url, class: "img-responsive") %></p>
          <p><%= product.description %></p>
          <p><%= product.colour %></p>
          <p>Â£<%= product.price %></p>
          <p><%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      <% end %>  
    </div>
  </div>  

  <br>

  <div style="font-size:30px;"><%= link_to 'New Product', new_product_path %></div>
 </div>