<% if signed_in? %>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h4>Add a review:</h4>
        <p>
          <%= f.label :body, "Comments:" %><br>
          <%= f.text_area :body, class: "form-control" %>
        </p>
        <p>
          <%= f.label :rating, "Ratings:" %><br>
        </p> 
       <p>
          <div class="rating"></div>
        </p>  
        <p>
          <%= f.submit "Submit", class: "btn btn-sm btn-default" %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>