<%= form_with(local: true, model: product_obj) do |form| %>
  <% if product_obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_obj.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product_obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :product_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :product_description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :image_url %>
        <%= form.text_field :image_url, id: :product_image_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :colour %>
        <%= form.text_field :colour, id: :product_colour, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, id: :product_price, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Add this product to the catalogue", class: 'btn btn-primary' %>
      </div>
    </div>  
  </div>
<% end %>
