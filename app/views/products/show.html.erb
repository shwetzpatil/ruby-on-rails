<div class="container-fluid body-content-wrapper">
  <p id="notice"><%= notice %></p>
  <div class="row product-show">
    <div class="col-sm-12 col-md-6">
      <p>
        <%= image_tag(@product.image_url, class: 'img-responsive') %>
      </p>
      <p><%= render 'new_comment' %></p>
      <p><%= render "comments"%></p>
      <%= will_paginate @comments %>
    </div>
    <div class="col-md-6 text-left">  
      <p>
        <h1 class="text-uppercase"><%= @product.name %></h1>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>


      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p><strong>Average Rating:</strong>
      <div class="rated" data-score="<%= @product.average_rating %>"></div> 
      </p>
      
      <p>
        <% if can? :crud, Product %>
          <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-info" %>
        <% end %>
        <%= link_to 'Back', products_path, class:"btn btn-default" %>

      </p>
    </div>  
  </div>      
</div>
